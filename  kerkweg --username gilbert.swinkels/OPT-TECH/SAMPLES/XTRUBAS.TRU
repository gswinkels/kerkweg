REM SAMPLE TRUE BASIC PROGRAM THAT CALL OPT-TECH SORT
LIBRARY "SORTTB.TRC"
LET INFILE$  = "SAMP.DAT"
LET OUTFILE$ = "SORTED.DAT"
LET CTLSTMT$ = "S(1,10,C,A)"
PRINT "CALLING OPT-TECH SORT..."
CALL SORTTB(INFILE$,OUTFILE$,CTLSTMT$,NUMREC,RETCODE)
PRINT "BACK FROM OPT-TECH SORT"
PRINT "NUMBER OF RECORDS = ",NUMREC
PRINT "SORT STATUS       = ",RETCODE
END
